<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">

    <select id="getMemberList" resultType="glico.pocky.domain.member.domain.Member">
        SELECT *
        FROM GLICO.MEMBER;
    </select>

    <select id="memberLogin" resultType="glico.pocky.domain.member.domain.Member">
        SELECT *
        FROM GLICO.MEMBER
        WHERE userid = #{userid}
    </select>

    <insert id="signup" parameterType="glico.pocky.domain.member.dto.SignupRequest" keyProperty="id">
        INSERT INTO GLICO.MEMBER
        (
         userid,
         password,
         name,
         birth,
         mobile,
         email,
         gender,
         is_deleted,
         created_at,
         updated_at
        )
         VALUES(
         #{userid},
         #{password},
         #{name},
         #{birth},
         #{mobile},
         #{email},
         #{gender},
         'N',
         CURRENT_TIMESTAMP,
         CURRENT_TIMESTAMP
        )
    </insert>
</mapper>