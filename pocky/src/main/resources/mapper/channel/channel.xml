<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="channel">

    <!-- ChannelResultMap 정의 -->
    <resultMap id="ChannelResultMap" type="glico.pocky.domain.channel.domain.Channel">
        <id property="channelId" column="CHANNEL_ID"/>
        <result property="channelTitle" column="CHANNEL_TITLE"/>
        <result property="channelSlug" column="CHANNEL_SLUG"/>
        <result property="isDeleted" column="IS_DELETED"/>
        <result property="createdAt" column="CREATED_AT"/>
        <result property="updatedAt" column="UPDATED_AT"/>

        <!-- ChannelDescription 매핑 -->
        <association property="channelDescription" javaType="glico.pocky.domain.channel.domain.ChannelDescription">
            <id property="descriptionId" column="DESCRIPTION_ID"/>
            <result property="descriptionTextFirst" column="DESCRIPTION_TEXT_FIRST"/>
            <result property="descriptionTextSecond" column="DESCRIPTION_TEXT_SECOND"/>
            <result property="descriptionTextThird" column="DESCRIPTION_TEXT_THIRD"/>
            <result property="isDeleted" column="IS_DELETED"/>
            <result property="createdAt" column="CREATED_AT"/>
            <result property="updatedAt" column="UPDATED_AT"/>
        </association>
    </resultMap>

    <select id="getChannelList" resultMap="ChannelResultMap">
        SELECT
            C.CHANNEL_ID,
            C.CHANNEL_TITLE,
            C.CHANNEL_SLUG,
            C.IS_DELETED,
            DATE_FORMAT(C.CREATED_AT, '%Y-%m-%d %H:%i:%s') AS CREATED_AT,
            DATE_FORMAT(C.UPDATED_AT, '%Y-%m-%d %H:%i:%s') AS UPDATED_AT,
            CD.DESCRIPTION_ID,
            CD.DESCRIPTION_TEXT_FIRST,
            CD.DESCRIPTION_TEXT_SECOND,
            CD.DESCRIPTION_TEXT_THIRD
        FROM GLICO.CHANNEL C
        LEFT JOIN CHANNEL_DESCRIPTION CD ON C.CHANNEL_ID = CD.CHANNEL_ID
    </select>

    <select id="getChannelById" parameterType="String" resultMap="ChannelResultMap">
        SELECT
            C.CHANNEL_ID,
            C.CHANNEL_TITLE,
            C.CHANNEL_SLUG,
            C.IS_DELETED,
            DATE_FORMAT(C.CREATED_AT, '%Y-%m-%d %H:%i:%s') AS CREATED_AT,
            DATE_FORMAT(C.UPDATED_AT, '%Y-%m-%d %H:%i:%s') AS UPDATED_AT,
            CD.DESCRIPTION_ID,
            CD.DESCRIPTION_TEXT_FIRST,
            CD.DESCRIPTION_TEXT_SECOND,
            CD.DESCRIPTION_TEXT_THIRD
        FROM GLICO.CHANNEL C
                 LEFT JOIN CHANNEL_DESCRIPTION CD ON C.CHANNEL_ID = CD.CHANNEL_ID
        WHERE C.CHANNEL_SLUG = #{channelSlug}
    </select>

