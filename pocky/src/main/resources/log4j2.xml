<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
    </Properties>
    <Appenders>
        <Console name="consoleAppender" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %c %-5p [ %l ] %m%n"
                    disableAnsi="false" />
        </Console>
        <RollingFile name="serverAppender"
                     fileName="logs/${serverLog}.log"
                     filePattern="logs/%d{yyyy-MM-dd}-%i-${serverLog}.log" append="true"
                     createOnDemand="true">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %c %-5p [ %l ] %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="1 MB" />
            </Policies>
        </RollingFile>
        <RollingFile name="databaseAppender"
                     fileName="logs/${databaseLog}.log"
                     filePattern="logs/%d{yyyy-MM-dd}-%i-${databaseLog}.log" append="true"
                     createOnDemand="true">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %c %-5p [ %l ] %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="1 MB" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="consoleAppender" />
        </Root>
        <Logger name="logger" level="DEBUG" additivity="false">
            <AppenderRef ref="consoleAppender" />
        </Logger>
        <Logger name="member" level="DEBUG" additivity="false">
            <AppenderRef ref="consoleAppender" />
        </Logger>
        <Logger name="naver" level="DEBUG" additivity="false">
            <AppenderRef ref="consoleAppender" />
        </Logger>
        <Logger name="kakao" level="DEBUG" additivity="false">
            <AppenderRef ref="consoleAppender" />
        </Logger>
        <Logger name="youtube" level="DEBUG" additivity="false">
            <AppenderRef ref="consoleAppender" />
        </Logger>
    </Loggers>
</Configuration>